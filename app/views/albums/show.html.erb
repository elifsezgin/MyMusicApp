<h2> <%= @album.name %> </h3>

<h3>Tracks</h3>
<ul>
  <% @album.tracks.each do |track| %>
    <li><%= link_to "#{track.name}", track_url(track) %></li>
  <% end %>
</ul>

<h3>Links</h3>
<ul>
  <li> <%= link_to "New track", new_album_track_url(@album) %></li>
  <li> <%= link_to "Edit album", edit_album_url %></li>
  <li> <%= link_to "Destroy album", album_url(@album), method: :delete %></li>
  <li> <%= link_to "Back to #{@album.band.name}", band_url(@album.band) %></li>
</ul>
